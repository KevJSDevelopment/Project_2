<div class= "header">


    <div class= "welcome"> <i> NOZAMA </i> </div>

    <div class= "nav-buttons">
        <%= button_to "See All Items", items_path, method: 'get' %>

        <%  if session[:user_id]%>
                <%= button_to "Profile", user_path(session[:user_id]), method: 'get'%>

                <%= button_to "My Orders", orders_path, method: 'get' %>
                <%= button_to "Logout", logout_path, method: 'get' %>
            <%else%>
                <%= button_to "Login", login_path, method: 'get' %>
            <% end %>
     
        <!-- <%= button_to "Wishlists", orders_path, method: 'get' %> -->
    </div>

    <div class= "search">
        <%= form_tag(items_path, method: :get) do %>
        <%= select_tag :category, options_for_select(Item.all_categories), include_blank: "All Categories" %>
        <%= text_field_tag(:search, params[:search]) %>
        <%= submit_tag ("Search") %>
        <% end %>
    </div>

</div>

