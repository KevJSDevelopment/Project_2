<h1> Products </h1>

  <ul <% if @one_category %>
            class="One_Category"
          <%else%>
            class="All_Categories"
          <%end%>>
    <% @categories.each do |category|%>
      <h3> <%= category.name.titleize %></h3>
        <% @items.each do |item|%>
          <%if item.category_id == category.id%>
            <li>
              <%= link_to item.name, item_path(item.id), class:"shop" %> 
              <%= number_to_currency(item.price) %> 
              <%= link_to "Add Item", add_order_path(item.id), method: "post", class:"shop"%>
            </li>
          <%end%>
      <%end%>
    <%end%>
  </ul>

