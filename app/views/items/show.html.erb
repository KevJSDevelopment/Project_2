<div class="form", id="item-form">
    <h2> <%= @item.name %> </h2>

    <p> Price: <%= number_to_currency(@item.price) %> </p>
    <p> Description: <%= @item.description %> </p>
    <img src= <%= @item.image %>>
    <br>
    <%= button_to "Add to Order", add_order_path(@item.id), method: 'post', class:"btn btn-outline-success", id: "add-order-button" %>

    <%= form_tag(add_wishlist_path(@item.id), {:class => "wishlist-form"}) do %>
    <% if @wishlists != nil && @wishlists != [] %>
        <%= select_tag :wishlist, options_from_collection_for_select(@wishlists, "id", "name"), class: "form-control", id: "select-wishlist"%>
        <%= submit_tag ("Add to Wishlist"), class:"btn btn-outline-success", id: "add-wishlist-button"%>
    <% end %>
    
    <%end%>
</div>


