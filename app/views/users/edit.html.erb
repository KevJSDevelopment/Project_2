
<div class="form", id="edit-form">
  <h2> Edit Profile </h2>

  <% if @user.errors %>
    <ul>
      <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @user do |f| %>
    <%= f.label :name, "Username:" %>
    <%= f.text_field :name, class: "form-control", id: "edit-field" %>
    <br>
    <%= f.submit "Update Account", class: "btn btn-outline-success" %>
  <% end %>
</div>